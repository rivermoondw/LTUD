<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="upload/user/<%=avatar%>" class="img-circle" alt="User Image" width="160" height="160">
        </div>
        <div class="pull-left info">
          <p><%= username %></p>
          <a href="javascript:void(0)"><i class="fa fa-circle text-success"></i> <%= role %></a>
        </div>
      </div>
      <!-- search form -->
      <form action="#" method="get" class="sidebar-form">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
        </div>
      </form>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
        <li class="header">MENU CHÍNH</li>
        <li class="treeview <% if (active_parent == 'category') { %>
          active
        <% } %>">
          <a href="javascript:void(0)">
            <i class="fa fa-dashboard"></i> <span>Quản lý danh mục</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li <% if ((active_parent == 'category') && (active == 'list')) { %>
              class="active"
            <% } %>><a href="/admin/category/list"><i class="fa fa-circle-o"></i> Danh sách danh mục</a></li>
            <li <% if ((active_parent == 'category') && (active == 'add')) { %>
              class="active"
            <% } %>><a href="/admin/category/add"><i class="fa fa-circle-o"></i> Thêm danh mục</a></li>
          </ul>
        </li>
        <li class="treeview <% if (active_parent == 'article') { %>
          active
        <% } %>">
          <a href="javascript:void(0)">
            <i class="fa fa-dashboard"></i> <span>Quản lý bài viết</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li <% if ((active_parent == 'article') && (active == 'list')) { %>
              class="active"
            <% } %>><a href="/admin/article/list"><i class="fa fa-circle-o"></i> Danh sách bài viết</a></li>
            <li <% if ((active_parent == 'article') && (active == 'add')) { %>
              class="active"
            <% } %>><a href="/admin/article/add"><i class="fa fa-circle-o"></i> Thêm bài viết</a></li>
          </ul>
        </li>
        <li class="treeview <% if (active_parent == 'role') { %>
          active
        <% } %>">
          <a href="javascript:void(0)">
            <i class="fa fa-dashboard"></i> <span>Quản lý vai trò</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li <% if ((active_parent == 'role') && (active == 'list')) { %>
              class="active"
            <% } %>><a href="/admin/role/list"><i class="fa fa-circle-o"></i> Danh sách vai trò</a></li>
            <li <% if ((active_parent == 'role') && (active == 'add')) { %>
              class="active"
            <% } %>><a href="/admin/role/add"><i class="fa fa-circle-o"></i> Thêm vai trò</a></li>
          </ul>
        </li>
        <li class="treeview <% if (active_parent == 'user') { %>
          active
        <% } %>">
          <a href="javascript:void(0)">
            <i class="fa fa-dashboard"></i> <span>Quản lý tài khoản</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li <% if ((active_parent == 'user') && (active == 'list')) { %>
              class="active"
            <% } %>><a href="/admin/user/list"><i class="fa fa-circle-o"></i> Danh sách tài khoản</a></li>
            <li <% if ((active_parent == 'user') && (active == 'add')) { %>
              class="active"
            <% } %>><a href="/admin/user/add"><i class="fa fa-circle-o"></i> Thêm tài khoản</a></li>
          </ul>
        </li>
        <li>
          <a href="/admin/logout">
            <i class="fa fa-th"></i> <span>Đăng xuất</span>
          </a>
        </li>
      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>
